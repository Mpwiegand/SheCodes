    <script>
      function joinNow() {
        let name = prompt("What is your name?");
        if (name.length > 0) {
          alert(
            "Hello " + name + ", we'll be in touch soon. Happy crocheting!"
          );
        } else {
          alert("You can't join if you don't enter a name!");
        }
       
      }
       let contactButton = document.querySelector("button");
        contactButton.addEventListener("click", joinNow);
    </script>
